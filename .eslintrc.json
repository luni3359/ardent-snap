{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [2, "double", { "avoidEscape": true }],
        "indent": ["error", 4],
        "no-unused-vars": "warn",
        "arrow-parens": ["error", "as-needed"],
        "no-underscore-dangle": ["error", {"allowAfterThis": true }]
    },
    "ignorePatterns": "webpack.config.js",
}
